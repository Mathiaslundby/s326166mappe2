<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditRestFragment">

    <TextView
        android:id="@+id/tvEditRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editRest"
        android:textSize="26sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/edit_rest_name"
        android:layout_below="@id/tvEditRest"
        android:drawableStart="@drawable/ic_home"
        style="@style/etStyle"
        android:hint="@string/restaurant"/>

    <EditText
        android:id="@+id/edit_rest_address"
        android:drawableStart="@drawable/ic_location"
        style="@style/etStyle"
        android:hint="@string/address"
        android:layout_below="@id/edit_rest_name"/>

    <EditText
        android:id="@+id/edit_rest_number"
        android:drawableStart="@drawable/ic_phone"
        style="@style/etStyle"
        android:hint="@string/number"
        android:layout_below="@id/edit_rest_address"/>

    <EditText
        android:id="@+id/edit_rest_Type"
        android:drawableStart="@drawable/ic_restaurant"
        style="@style/etStyle"
        android:hint="@string/type"
        android:layout_below="@id/edit_rest_number"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_edit_rest"
            android:src="@drawable/ic_check_circle"
            style="@style/imgViewStyle"/>

        <ImageView
            android:id="@+id/btn_delete_rest"
            android:src="@drawable/delete_button"
            style="@style/imgViewStyle"/>
    </LinearLayout>

</RelativeLayout>