<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddRestFragment">

    <EditText
        android:id="@+id/add_rest_name"
        style="@style/etStyle"
        android:hint="Name"/>

    <EditText
        android:id="@+id/add_rest_address"
        style="@style/etStyle"
        android:layout_below="@id/add_rest_name"
        android:hint="Phone number"/>

    <EditText
        android:id="@+id/add_rest_number"
        style="@style/etStyle"
        android:layout_below="@id/add_rest_address"
        android:hint="Address"/>

    <EditText
        android:id="@+id/add_rest_Type"
        style="@style/etStyle"
        android:layout_below="@id/add_rest_number"
        android:hint="Type"/>

    <ImageView
        android:id="@+id/btn_add_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_check_circle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>
</RelativeLayout>